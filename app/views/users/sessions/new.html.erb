<% provide :title, t("users.login.title") %>
<div class="form-user">
<h2><%= t "users.login.title" %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <div class="field">
      <%= f.label :email, t("users.email") %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
       class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :password, t("users.password") %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

  </div>
    <% if devise_mapping.rememberable? -%>
      <div class="form-check">
        <div class="field">
          <%= f.check_box :remember_me, class: "form-check-label" %>
          <%= f.label :remember_me, t("users.remember") %>
        </div>
      </div>
    <% end -%>

  <div class="actions">
    <%= f.submit t("users.login.title"), class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>

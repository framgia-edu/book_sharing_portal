<% provide :title, t("users.registration.edit") %>
<h2><%= t("users.registration.edit") %></h2>
<%= devise_error_messages! %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="field-avatar">
      <%= f.label :avatar , t("users.avatar")%><br/>
      <% if current_user.avatar? %>
        <%= image_tag(current_user.avatar.url) %>
      <% else %>
        <%= image_tag("default-avatar.jpg") %>
      <% end %><br/>
      <%= f.file_field :avatar %>
    </div>
    <div class="form-user">
      <div class="field">
        <%= f.label :name, t("users.name") %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div><%= t("registration.waiting_confirmation", email: resource.unconfirmed_email) %></div>
      <% end %>

      <div class="field">
        <%= f.label :password, t("users.password") %><br /> <i>(<%= t("users.registration.notice_blank") %>)</i>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <em><%= t("users.signup.minimum",number: @minimum_password_length) %></em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, t("users.signup.confirm") %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :current_password, t("users.registration.current_password") %><br /> <i>(<%= t("users.registration.notice_confirm") %>)</i>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit t("users.registration.update"), class: "btn btn-primary" %>
      </div>

    </div>
<% end %>
<div class="form-user">
  <h3><%= t("users.registration.cancel") %></h3>

  <p><%= button_to t("users.registration.cancel"), registration_path(resource_name), data: { confirm: t("users.sure") }, method: :delete, class: "btn btn-primary" %></p>

  <%= link_to t("users.back"), :back %>
</div>
